          <textarea name="comentario" id="" cols="30" rows="5"></textarea>
        </div>
        <button  class="btn btn-secondary" type="submit" >Cadastrar</button>
      </form>  
    </div>
    <div class="col-md-6 col-sm-12">

      {{#each comentarios}}
     
      <div class="card">
  <div class="card-header">
    Comentario
  </div>
  <div class="card-body">
      <p class="card-text">{{comentarios}}</p>
    <a href="#" class="btn btn-primary">Ouvir</a>
  </div>
</div>
<br>
       
      {{/each}}
    </div>
  </div>
</div>